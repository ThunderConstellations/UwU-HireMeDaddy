{
  "manifest_version": 3,
  "name": "UwUâ€‘HireMeDaddy",
  "version": "2.0",
  "description": "Automatically fills out job applications and submits them using AI.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "*://*.indeed.com/*",
    "*://*.linkedin.com/*",
    "*://*.glassdoor.com/*",
    "*://*.monster.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*",
        "*://*.linkedin.com/*",
        "*://*.glassdoor.com/*",
        "*://*.monster.com/*"
      ],
      "js": ["content/core.js"]
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
